@model Alfatec.Application.DTOs.ServicosDTO

@{
    ViewData["Title"] = "Adicionar Serviço";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>.</h1>

<h4>Adicionar Serviço</h4>
<hr />
<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-none">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeServico" class="control-label"></label>
                <input asp-for="NomeServico" class="form-control" />
                <span asp-validation-for="NomeServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Classificação do Serviço</label>
                <input asp-for="Classificacao" class="form-control" />
            </div>
            <div class="form-group row mt-2">
                <input type="submit" value="Criar Serviço" class="btn-block btn btn-primary text-white" />
            </div>
        </form>
    </div>
</div>
